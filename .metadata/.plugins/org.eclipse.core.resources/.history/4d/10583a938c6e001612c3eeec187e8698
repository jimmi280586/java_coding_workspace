package rmipeer2peer;

import java.io.BufferedReader;
import java.io.InputStreamReader;
import java.net.Inet4Address;
import java.rmi.Naming;

public class ThreadOfHelloClient implements Runnable{

	public void run(){
		try   
		{    
		   //HelloInterface hello = (HelloInterface) Naming.lookup("Hello");    
		   HelloInterface hello = (HelloInterface)Naming.lookup("//" + Inet4Address.getLocalHost().getHostAddress() + ":8080/" + "Hello");    
		   
		   BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
		   String said;
		   while((said=br.readLine())!=null){      
		   System.out.println(hello.say(said));
		   }
		}    
		catch (Exception e)    
		{    
		   System.out.println("HelloClient exception: " + e);    
		}       
	}

public static void main(String [] args){
	new ThreadOfHelloClient().run();
	}
}

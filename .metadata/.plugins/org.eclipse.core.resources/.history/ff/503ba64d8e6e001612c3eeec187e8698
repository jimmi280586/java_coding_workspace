package rmipeer2peer;

import java.rmi.RemoteException;
import java.rmi.server.UnicastRemoteObject;

import interfaces.HelloInterface;

public class HelloPeer2Peer 
	 extends UnicastRemoteObject implements HelloInterface    
	{       
	   
	   public HelloPeer2Peer() throws RemoteException    
	   {    
	      super();    
	   }    
	   
	    public String say(String said) throws RemoteException    
	   {    
	      System.out.println(said);
	      String message = "Sever got what you said"; 
	      return message;    
	   }    
	} 

